{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": false
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "multi-line"
        ],
        "no-magic-numbers": [
            "error",
            { "ignore": [0, 1, 2, 3000]}
        ],
        "max-classes-per-file": [
            "error",
            1
        ],
        "array-bracket-newline": [
            "error",
            { "minItems": 2 }
        ],
        "array-element-newline": [
            "error",
            { "multiline": true, "minItems": 2 }
        ],
        "camelcase": "error"
    }
}